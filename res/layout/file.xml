<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
	android:background="@android:color/white"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" >
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		<RelativeLayout 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" >
			<TextView  
				android:id="@+id/file_title" 
				android:textColor="@color/background"
				android:background="@android:color/white" 
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:minHeight="75dip"
				android:gravity="center"
				android:paddingLeft="10dip"
				android:paddingTop="10dip"
				android:paddingBottom="10dip"
				android:paddingRight="60dip"/>
			<ImageButton 
				android:id="@+id/view_file" 
				android:layout_alignParentRight="true"
				android:layout_marginTop="10dip"
				android:layout_marginRight="5dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:src="@drawable/ic_menu_view"/>
			<View 
				android:id="@+id/separator"
				android:layout_below="@id/file_title"
				android:layout_height="2dip" 
				android:layout_width="fill_parent" 
				android:background="#FF909090" />	
			<TextView 
				android:id="@+id/file_title2" 
				android:layout_below="@id/separator"
				android:padding="10dip"
				android:textSize="16sp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_workspace" 
				android:layout_below="@id/file_title2"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_description" 
				android:layout_below="@id/file_workspace"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_type" 
				android:layout_below="@id/file_description"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_added_by" 
				android:layout_below="@id/file_type"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_updated" 
				android:layout_below="@id/file_added_by"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_size" 
				android:layout_below="@id/file_updated"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/file_approval_due" 
				android:layout_below="@id/file_size"
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
		</RelativeLayout>
	</ScrollView>
</LinearLayout>

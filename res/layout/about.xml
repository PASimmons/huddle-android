<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
	android:background="@android:color/white"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" >
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		<LinearLayout 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" >
			<TextView  
				android:textColor="@color/background"
				android:background="@android:color/white" 
				android:textSize="18sp"
				android:textStyle="bold"
				android:text="About"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:gravity="center"
				android:padding="10dip"/>
			<View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#FF909090" />	
			<TextView 
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:textSize="16sp"
				android:text="Handle for Android"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView
			    android:padding="10dip"
			    android:layout_width="wrap_content"
			    android:text="Handle uses the Huddle APIs to provide a mobile collaboration solution."
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:textColor="#000000" />
			<TextView 
				android:id="@+id/about_text" 
				android:padding="10dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"
				android:text="Huddle is a secure online space where people can connect and work together. Get in a huddle for project management, file sharing, team collaboration and to work with colleagues, partners, customers and suppliers in the cloud.\n\nService provided by Huddle:\nwww.huddle.com"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
	android:background="@android:color/white"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" >
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		<RelativeLayout 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent" >
			<TextView  
				android:id="@+id/approval_title" 
				android:textColor="@color/background"
				android:background="@android:color/white" 
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:minHeight="75dip"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:paddingRight="70dip"/>
		    <ImageButton 
                android:id="@+id/view_file" 
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"
                android:layout_marginRight="5dip"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_view"/>
			<View 
			    android:id="@+id/separator"
			    android:layout_height="2dip" 
			    android:layout_width="fill_parent" 
			    android:background="#FF909090"
			    android:layout_below="@id/approval_title" />	
			<TextView 
				android:id="@+id/approval_title2" 
				android:padding="10dip"
				android:layout_below="@id/separator"
				android:layout_width="wrap_content" 
				android:textSize="16sp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/approval_workspace" 
				android:padding="10dip"
				android:layout_below="@id/approval_title2"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/approval_description" 
				android:padding="10dip"
				android:layout_below="@id/approval_workspace"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
			<TextView 
				android:id="@+id/approvals" 
				android:padding="10dip"
				android:layout_below="@id/approval_description"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="#000000"/>
		</RelativeLayout>
	</ScrollView>
</LinearLayout>
